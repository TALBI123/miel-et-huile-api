model User {
  id                String               @id @default(dbgenerated("gen_random_uuid()"))
  firstName         String
  lastName          String
  email             String               @unique
  password          String?
  phoneNumber       String?
  address           String?
  city              String?
  state             String?
  postalCode        String?
  image             String?
  publicId          String?              @unique
  googleId          String?              @unique
  country           String?
  newsletter        Boolean              @default(false)
  termsAccepted     Boolean              @default(false)
  isVerified        Boolean              @default(false)
  role              Role                 @default(USER)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt
  order             Order[]
  cart              Cart[]
  review            Review[]
  verificationToken VerificationTokens[]

  @@index([createdAt])
  @@index([email])
  @@index([isVerified])
}
model Category {
  id          String    @id @default(dbgenerated("gen_random_uuid()"))
  name        String    @unique
  image       String
  publicId    String
  description String?
  slug        String    @unique
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id                 String      @id @default(dbgenerated("gen_random_uuid()"))
  name               String
  description        String
  discountPrice      Float?      @default(0)
  discountPercentage Int?        @default(0)
  isOnSale           Boolean?    @default(false)
  price              Float
  image              String
  stock              Int         @default(0)
  publicId           String
  category           Category    @relation(fields: [categoryId], references: [id])
  categoryId         String
  cartItem           CartItem[]
  orderItems         OrderItem[]
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  review             Review[]

  @@index([categoryId])
  @@index([price])
  @@index([createdAt])
}

model CartItem {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(1)
  createdAt DateTime @default(now())

  @@unique([cartId, productId])
}

model Cart {
  id        String     @id @default(dbgenerated("gen_random_uuid()"))
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
}

model Order {
  id            String        @id @default(dbgenerated("gen_random_uuid()"))
  userId        String
  user          User          @relation(fields: [userId], references: [id])
  items         OrderItem[]
  totalAmount   Float
  status        OrderStatus   @default(PENDING)
  paymentMethod String
  paymentStatus PaymentStatus @default(PENDING)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([userId]) // Commandes par utilisateur
  @@index([status]) // Filtrage par statut
  @@index([createdAt])
  @@index([paymentStatus])
}

model OrderItem {
  id        String  @id @default(dbgenerated("gen_random_uuid()"))
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int     @default(1)
  price     Float // Prix au moment de la commande

  @@index([orderId]) // ✅ Recommandé - Items par commande
  @@index([productId])
}

model Review {
  id         String   @id @default(dbgenerated("gen_random_uuid()"))
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  rating     Int
  title      String?
  comment    String?
  isVerified Boolean  @default(false) // Achat vérifié
  isApproved Boolean  @default(false) // Modération
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@index([rating])
  @@index([isApproved])
}

model Promotion {
  id             String       @id @default(dbgenerated("gen_random_uuid()"))
  code           String       @unique
  discountType   DiscountType @default(PERCENTAGE) // "percentage" ou "fixed"
  discountValue  Float
  minOrderAmount Float?
  maxUses        Int?
  usedCount      Int          @default(0)
  validFrom      DateTime
  validUntil     DateTime
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())

  @@index([isActive]) // Promotions actives
  @@index([validUntil]) // Expiration promotions
}

model Testimonial {
  id         String   @id @default(dbgenerated("gen_random_uuid()"))
  clientName String
  image      String?
  publicId   String?
  content    String
  rating     Int
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([isActive])
}

model ShippingZone {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  name      String // ex: "France Métropolitaine", "UE"
  countries String[] // Liste des pays codes ISO: ["FR", "BE", "DE"]
  price     Float
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@index([isActive])
}

model NewsletterSubscription {
  id        String   @id @default(uuid()) // Identifiant unique
  email     String   @unique // Email unique du subscriber
  isActive  Boolean  @default(true) // Statut d'abonnement
  createdAt DateTime @default(now()) // Date d'inscription
  updatedAt DateTime @updatedAt // Date de dernière modification

  @@index([email]) // Index pour recherches rapides par email
  @@index([isActive]) // Index pour filtrer rapidement les actifs/inactifs
}

model VerificationTokens {
  id        String                @id @default(dbgenerated("gen_random_uuid()"))
  token     String                @unique
  userId    String
  user      User                  @relation(fields: [userId], references: [id])
  type      VerificationTokenType
  expiresAt DateTime
  createdAt DateTime              @default(now())

  @@index([userId, type])
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum ProductType {
  HONEY
  OIL
  COMBO
  ACCESSORY
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum VerificationTokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}
