  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  // Utilisez la variable d'environnement qui contient votre URL
  url          = env("DATABASE_URL")
  // Nouveau : nécessaire pour les migrations avec SSL
  directUrl    = env("DIRECT_URL")
  // Nouveau : paramètre crucial pour SSL
  relationMode = "prisma"
}

